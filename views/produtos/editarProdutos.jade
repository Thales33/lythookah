extends ../layout

block content
    h1= title
    div(class="form-group")
        form#formEditaProduto(name="editaproduto",method="post",action="/produtos/editarProdutos")
            input#inputProdutoDescricao(type="text", class="form-control", placeholder="Descrição", name="descricao")
            br
            input#inputProdutoPrecoCusto(type="text", class="form-control", placeholder="Preco de Custo", name="precoCusto")
            br
            input#inputProdutoPrecoVenda(type="text", class="form-control", placeholder="Preço de Venda", name="precoVenda")
            br
            input#inputProdutoTipo(type="text", class="form-control", placeholder="Tipo", name="tipo")
            br
            input#inputProdutoMarca(type="text", class="form-control", placeholder="Marca", name="marca")
            br
            input#inputOngId(type="text", name="idproduto", style="display:none;" value="#{produtos[0].id}")
            
            
            button#btnSubmit(type="submit", class="btn btn-primary") Editar